<div class="container">
  <div class="row">
      <div class="col-sm-4"></div>
      <h1 class="col-sm-4">Eat-Da-Burger!</h1>
      <div class="col-sm-4"></div>
  </div>
  <div class="row">
      <div class="col-sm-4"></div>
      <div class="col-sm-4"><img id="burger_image" src="/assets/img/burger.png" /></div>
      <div class="col-sm-4"></div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-xs-12">
      <h2>Burgers You Want to Eat</h2>
      <ul id="uneaten">
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              <div class="uneaten-burger">
                {{this.id}} {{this.burger_name}}
              </div>
              <form class="devour-btn" action="/{{this.id}}?_method=PUT" method="POST">
                <input  type="hidden" name="devoured" value="true">
                <button class="btn btn-primary" type="submit">Devour it!</button>
              </form>

            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm-6 col-xs-12">
      <h2>Burgers You Have Eaten!</h2>

      <ul id="eaten">
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              <div class="eaten-burger">
                {{this.id}} {{this.burger_name}}
              </div>
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h2>Add a Burger</h2>
      <form class="create-update-form" action="/" method="POST">

        <div class="form-group">
          <label for="burger">Burger Name: </label>
          <input type="text" id="burger" name="burger_name">
        </div>

        <button class="btn btn-primary" type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>